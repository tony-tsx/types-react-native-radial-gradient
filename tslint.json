{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "quotemark": [ true, "single" ],
    "semicolon": [ true, "never" ],

    "arrow-parens": [ true, "ban-single-arg-parens" ],

    "no-console": [ true, "error", "warn" ],
    "no-empty": [ true, "allow-empty-catch", "allow-empty-functions" ],
    "no-var-requires": [ false ],
    "no-namespace": [ false ],
    "no-empty-interface": [ false ],

    "only-arrow-functions": [ true, "allow-named-functions" ],
    "space-before-function-paren": [ false, "" ],
    "unified-signatures": [ false ],
    "no-shadowed-variable": [ false ],

    "object-literal-sort-keys": [ false ],
    "max-classes-per-file": [ true, 2 ],
    "ordered-imports": false,
    "member-ordering": false,
    "object-literal-shorthand": false,
    "interface-name": [ false ],
    "curly": [ true, "as-needed" ],
    "array-type": [ true, "array" ],
    "variable-name": [ true, "allow-pascal-case", "allow-snake-case", "allow-trailing-underscore", "require-const-for-all-caps", "ban-keywords" ],
    "trailing-comma": [ true, { "typeLiterals": "ignore" } ],
    "no-unused-expression": [ false ]
  },
  "rulesDirectory": []
}
